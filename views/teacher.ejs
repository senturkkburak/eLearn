<%- include ('./partials/header') %>
<script src="https://kit.fontawesome.com/b2df9fdb37.js" crossorigin="anonymous"></script>



<style>
    .containers{
        width: 100%;
        height: 15%;
        background-color: #000;
        color: #fff;
        font-family: Arial, Helvetica, sans-serif;

    }
    .contents{
        width: 60%;
        margin: 100px;
        display: flex; 
        flex-direction: row;
    }

    .cards{
        width: 200px;
        height: 220px;
        border:1px solid rgb(184, 184, 204);
        
        margin-right: 60px;
    }
    .cards:hover{
        box-shadow:1px 1px 1px rgb(184, 184, 204) ;
    }

    h5{
        font-family: Arial, Helvetica, sans-serif;
        text-align: center;
    }
    .okundu{
        background-color: blue;
    }
    .btn-primary{
        background-color: #fff;
    }
    
    .new{
        color: #fff;
    }
</style>

<div class="containers text-center">
    <h2 class="display-5 py-4">My Courses</h2>
</div>
<div class="container mt-5">
    <h1>Welcome</h1>
    <div class="card">
        <img src="" alt="">
        
    </div>
</div>
<% myCourses.forEach( (course)=>{ %>
<div class="contents">
    <div class="cards">
        <img src="https://www.turkcebilgi.com/uploads/media/resim/mona_lisa.jpg" alt="yok" width="200" height="125" >
        <h5><%=   course.courseName  %></h5>
        <h5><%=   course.courseDescription  %></h5>
        <p><%=   course.coursePrice  %> $</p>
        <a href="/teacherCourses/<%= course._id  %>" class="btn btn-warning btn-sm">Edit</a>
        <a href="/courses/<%= course._id  %>" class="btn btn-warning btn-sm">Details</a>
    </div>
</div>

<% });  %>
<div class="a d-flex justify-content-center align-items-center">
    <a href="/newCourse" class="btn btn-outline-primary btn-lg">Kurs Oluştur</a>
</div>

<div class="mt-5 d-flex justify-content-center align-items-center">
    <table class="table table-striped w-75">
        <thead>
            <tr>
                <th>Notifications</th>
                <th>Delete Notification</th>
            </tr>
        </thead>
        <tbody>
            <% foundNotifications.forEach((notification)=>{ %>
            <tr>
                <td><a href="/showVideo/<%= notification.videoname
                    %>/<%=notification.courseId%>"><%= notification.username%> kişisi <%= notification.coursename %> kursundan <%= notification.videoname
                    %> videosuna soru sordu</a></td>
                    <td><a href="/deleteNotification/<%= notification._id %>" class="btn btn-outline-primary btn-lg">Delete</a></td>
            </tr>
            <% });  %>
        </tbody>
    </table>
</div>


<br><br><br><br>
<script>
    var btn = document.querySelectorAll(".buton");
    console.log(btn)
    var i = document.querySelectorAll("i");
    btn.onclick = () =>{
        console.log(btn);
        btn.classList.add("okundu");
        i.classList.add("new");
    }
</script>
<%- include ('./partials/footer') %>