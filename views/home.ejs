 <%- include ('./partials/header') %>
 
<h2 class="mx-5 mt-4">Merhaba , hazırsan başlayalım </h2>
<h2 class="text-center mt-5 mb-4">Kurslar</h2>
     <div class="container" style="display: flex; flex-direction: row ; overflow-x: scroll; overflow-y: hidden;">
         <% foundCourses.forEach( (course)=>{ %>
       
    
      <div class="item " >
        <div class="card" style="width: 14rem; margin: 15px 25px;  ">
          
          <div class="card-body">
            <h5 class="card-title"><%=   course.courseName  %></h5>
            <p class="card-text"><%=   course.courseDescription  %></p>
            <p class="card-text"><%=   course.coursePrice  %> $</p>
            
            <a href="/courses/<%= course._id  %>" class="btn btn-warning btn-sm">Details</a>
          </div>
        </div>
      </div>
<% });  %>
</div>

<%- include ('./partials/footer') %>
 
