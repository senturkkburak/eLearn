<%- include ('./partials/header') %>
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.css">
  
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.js"></script>
<script src="https://cdn.ckeditor.com/4.19.0/standard/ckeditor.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<style>
  a{
    text-decoration: none;
    color: black;
  }
</style>


      <div class="container-fluid m-5 mx-2 d-flex align-items-center justify-content-center">
        

        
          <table class="table table-striped w-50 text-center">
            <thead>
              
              <tr>
                <th scope="col">#</th>
                <th scope="col">Video Name</th>
             
              </tr>
            </thead>
            <tbody>
              <% if(files){ %>
                <% files.forEach(function(file) { %>
                  <% if(file.isVideo ) { %>
              <tr>
                <th scope="row"></th>
                <td><a href="/showVideo/<%= file.filename %>/<%=foundCourse._id %>"> <h4><%= file.videoTitle %> </h4></a></td>

                <% if(role==3||okOwner==true||role==0){ %>
                  <td><a href="/deleteVideo/<%= file.filename %>/<%=foundCourse._id %>"> <h4>Delete </h4></a></td>
                    <% } %>
                    <div class="buttons d-flex flex-row justify-content-center" >
                    <a class="btn btn-outline-danger btn-md m-5" href="/quizlist/<%=foundCourse._id%>">Quizzes</a>
                    <div class="buton d-flex justify-content-center align-items-center">
                      <button id="yorumEkle" class="btn btn-outline-primary btn-lg mt-3">
                          Yeni yorum ekle
                      </button>
                  </div>
                  <div class="d-flex justify-content-center align-items-center">
                      <div id="commentForm" class="konteynır w-75 commentForm mt-5">

                          <form action="/videolist/<%= foundCourse._id %>" method="POST">
                              <div class="form-group mb-3">
                                  <div class="form-label">Buraya yorum ekleyebilirsin</div>
                                  <textarea name="commentBody" id="commentBody"></textarea>
                              </div>
                              <div class="form-group mb-3">
              
                                  <input type="submit" id="submit" class="form-control btn btn-outline-success btn-lg">
                              </div>
                          </form>
                          <button id="geriDon" class="btn btn-outline-danger btn-lg w-100 mt-3 mb-3">Tüm Yorumlara Geri Dön</button>
                      </div>
                  </div>
                    </div>
                <% } else { %>
                  
                  <% } %>
      
            
            <% }) %>
              <% } else { %>
                 <td><p>Henüz video eklenmemiş!</p></td>
                <% } %>
              </tr>
             
            </tbody>
           
             
 
          </table>
          <script>
               $(document).ready(function () {
              $("#commentForm").hide();
              $("#yorumEkle").click(function () {

                $("#commentForm").show();
                $("#yorumEkle").hide();
            });
        });
        $(document).ready(function () {

            $("#geriDon").click(function () {

                $("#commentForm").hide();
                $("#yorumEkle").show();
            });
        });
          </script>
          
</div>

          

          
 


