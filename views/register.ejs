<%- include ('./partials/header') %>

<style>
     #konteynır{
      border-color: lightgray;
      border-radius: 5px;
      background-color: #fcfcfc;
    }
    a{
        text-decoration: none;
    }
</style>

<div id="konteynır" class="container w-50 py-2 d-flex justify-content-center align-items-center my-5 border border-2">

    <div >
        <h4 class="mb-5 border-bottom p-2">Kaydolun ve öğrenmeye başlayın</h2>
            <form id="reg-form" action="/register" method="POST">
                <div class="mb-3">
                    
                    <input type="text" id="firstname" class="form-control" name="firstname" placeholder="First Name" autocomplete="off">
                </div>
                <div class="mb-3">
                    
                    <input type="text" id="lastname" class="form-control" name="lastname" placeholder="Last Name" autocomplete="off">
                </div>

                <div class="mb-3">
                    
                    <input type="email" id="username" class="form-control" name="username" placeholder="E-Mail" autocomplete="off">
                </div>
                
                <div class="mb-3">
                    
                    <input type="password" id="password" class="form-control" name ="password" placeholder="Password">
                </div>
                <input type="submit" style="margin-left: 300px;" value="Kaydol" class="btn btn-lg btn-primary mt-3 btn-lg-6">
            </form>
            <p class="mt-3 text-center border-bottom py-2">Kaydolarak Kullanım Şartlarımızı ve Gizlilik Politikamızı
                kabul etmiş olursunuz.
            </p>
            <p class="mt-2 text-center">Zaten bir hesabınız var mı?<a style="margin-left:30px;" href="/login">Oturum Aç</a> </p>
    </div>
    
</div>


<%- include ('./partials/footer') %>