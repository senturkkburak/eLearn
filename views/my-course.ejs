<%- include ('./partials/header') %>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@500&display=swap');
    .containers{
        width: 100%;
        height: 15%;
        background-color: #000;
        color: #fff;
        font-family: 'Poppins';

    }
    .contents{
        width: 60%;
        margin: 100px;
        display: flex; 
        flex-direction: row;
    }

    .cards{
        width: 200px;
        height: 220px;
        border:1px solid rgb(184, 184, 204);
        
        margin-right: 60px;
    }
    .cards:hover{
        box-shadow:1px 1px 1px rgb(184, 184, 204) ;
    }

    h5{
        font-family: 'Poppins';
        text-align: center;
    }
    .icerik{
        display: flex;
        flex-direction: row;
        justify-content: space-between;
    }
</style>

<div class="containers text-center">
    <h2 class="display-5 py-4">Öğrenim İçeriğim</h2>
</div>
<div class="icerik" style="overflow-x: scroll; overflow-y: hidden;">
<% myCourseArr.forEach( (course)=>{ %>
    
        <div class="contents ">
            <div class="cards">
                
                <h5><%=   course.courseName  %></h5>
                <h5><%=   course.courseDescription  %></h5>
                <p><%=   course.coursePrice  %> $</p>
                <a href="/videolist/<%= course._id %>" class="btn btn-warning btn-sm">Start Learning</a>
            </div>
        </div>
   

<% });  %>
</div>
<% if(myCourseArr==""){ %>
<p class="text-center my-5">You don't have any course</p>
    <% }  %>  
<%- include ('./partials/footer') %>